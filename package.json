{
  "name": "rimac-technical-challenge",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/lambdas/handlers/appointment.handler.js",
    "start:dev": "ts-node src/lambdas/handlers/appointment.handler.ts",
    "start:debug": "node --inspect-brk dist/lambdas/handlers/appointment.handler.js",
    "start:prod": "node dist/lambdas/handlers/appointment.handler.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "sls:deploy:prod": "serverless deploy --stage ${STAGE:-prod}",
    "sls:remove": "serverless remove",
    "sls:offline": "serverless offline",
    "sls:logs:appointment": "serverless logs -f appointment",
    "sls:logs:appointment-pe": "serverless logs -f appointmentPe",
    "sls:logs:appointment-cl": "serverless logs -f appointmentCl",
    "generate:lambda": "node scripts/generate-lambda.js",
    "docs:generate": "node scripts/generate-swagger-html.js",
    "docs:upload": "aws s3 sync docs/ s3://${PROJECT_PREFIX:-rimac-challenge}-${STAGE:-prod}-swagger-docs-${STAGE:-prod}/ --delete",
    "docs:url": "aws cloudformation describe-stacks --stack-name ${PROJECT_PREFIX:-rimac-challenge}-${STAGE:-prod}-${STAGE:-prod} --query 'Stacks[0].Outputs[?OutputKey==`SwaggerDocsWebsiteURL`].OutputValue' --output text",
    "deploy:full": "npm run build && npm run sls:deploy:prod && npm run docs:generate && npm run docs:upload && npm run docs:url",
    "deploy:script": "./scripts/deploy.sh",
    "deploy:env": "./scripts/deploy-with-env.sh"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.868.0",
    "@aws-sdk/client-eventbridge": "^3.864.0",
    "@aws-sdk/client-sns": "^3.864.0",
    "@aws-sdk/client-sqs": "^3.864.0",
    "@aws-sdk/lib-dynamodb": "^3.868.0",
    "joi": "^18.0.1",
    "js-yaml": "^4.1.0",
    "mysql2": "^3.14.3",
    "serverless-aws-documentation": "^1.1.0",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@serverless/typescript": "^4.18.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/aws-lambda": "^8.10.152",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "serverless": "^3.40.0",
    "serverless-esbuild": "^1.55.1",
    "serverless-offline": "^14.4.0",
    "serverless-plugin-optimize": "4.2.1-rc.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@domain/(.*)$": "<rootDir>/src/domain/$1",
      "^@application/(.*)$": "<rootDir>/src/application/$1",
      "^@infrastructure/(.*)$": "<rootDir>/src/infrastructure/$1",
      "^@presentation/(.*)$": "<rootDir>/src/presentation/$1",
      "^@shared/(.*)$": "<rootDir>/src/shared/$1"
    }
  }
}
